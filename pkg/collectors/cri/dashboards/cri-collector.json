{
  "dashboard": {
    "id": null,
    "title": "Tapio CRI Collector Metrics",
    "tags": ["tapio", "cri", "container", "kubernetes", "observability"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "10s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "CRI Events Processed Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(cri_events_processed_total[5m])",
            "legendFormat": "{{collector_name}} - {{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list",
              "orientation": "horizontal"
            },
            "decimals": 1,
            "unit": "reqps"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "OOM Kills Detected",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(cri_oom_kills_total[5m]))",
            "legendFormat": "OOM Kills/sec",
            "refId": "A"
          },
          {
            "expr": "sum(cri_oom_kills_total)",
            "legendFormat": "Total OOM Kills",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "short",
            "decimals": 2
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Container Processing Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(cri_processing_latency_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(cri_processing_latency_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(cri_processing_latency_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "xAxes": [
          {
            "type": "time"
          }
        ],
        "yAxes": [
          {
            "unit": "ms",
            "min": 0
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "avg": true
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Buffer Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "cri_buffer_usage_percent",
            "legendFormat": "{{collector}} - Buffer Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt"
          },
          {
            "value": 60,
            "colorMode": "warning",
            "op": "gt"
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": {
                "queryType": "",
                "refId": "A"
              },
              "reducer": {
                "type": "last",
                "params": []
              },
              "evaluator": {
                "params": [85],
                "type": "gt"
              }
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "CRI Buffer Usage High",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Active Containers",
        "type": "graph",
        "targets": [
          {
            "expr": "cri_containers_active",
            "legendFormat": "{{collector}} - Active Containers",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "short",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "CRI Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cri_errors_total[5m])",
            "legendFormat": "{{operation}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ],
        "seriesOverrides": [
          {
            "alias": "/.*error.*/",
            "color": "#F2495C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Event Batch Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(cri_batch_size_bucket[5m]))",
            "legendFormat": "p50 Batch Size",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(cri_batch_size_bucket[5m]))",
            "legendFormat": "p95 Batch Size",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "unit": "short",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "eBPF Metrics (Linux Only)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cri_ebpf_events_total[5m])",
            "legendFormat": "eBPF Events/sec",
            "refId": "A"
          },
          {
            "expr": "rate(cri_ebpf_events_dropped_total[5m])",
            "legendFormat": "eBPF Events Dropped/sec",
            "refId": "B"
          },
          {
            "expr": "rate(cri_ebpf_kernel_oom_kills_total[5m])",
            "legendFormat": "Kernel OOM Kills/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ],
        "seriesOverrides": [
          {
            "alias": "*Dropped*",
            "color": "#F2495C"
          },
          {
            "alias": "*OOM*",
            "color": "#FF9830"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Container State Checks",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cri_checks_performed_total[5m])",
            "legendFormat": "State Checks/sec",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 40
        }
      },
      {
        "id": 10,
        "title": "Events by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (event_type) (rate(cri_events_processed_total[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "right"
          },
          "displayLabels": ["name", "value"]
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 40
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Container Events",
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": false,
          "iconColor": "rgba(0, 211, 255, 1)",
          "query": "ALERTS{alertname=~\".*Container.*\"}",
          "type": "dashboard"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "collector",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(cri_events_processed_total, collector)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": "",
          "current": {
            "value": "All",
            "text": "All"
          }
        },
        {
          "name": "namespace",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(cri_events_processed_total{collector=~\"$collector\"}, namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": "",
          "current": {
            "value": "All",
            "text": "All"
          }
        }
      ]
    },
    "links": [
      {
        "title": "Tapio Documentation",
        "url": "https://github.com/yairfalse/tapio",
        "type": "link",
        "icon": "external link"
      }
    ]
  }
}